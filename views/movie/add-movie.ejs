</head>

<body>
    <%- include('../includes/header.ejs') %>


    <main>
        <h1>Add movie</h1>
        <%if(errorMessage){%>
        <%- include('../includes/error-box.ejs') %>
        <% } %>
        <form class="movie_form" action="/movies/add" method="POST" enctype="multipart/form-data">
            <div class="form_control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>
                <label for="movieImg">Image</label>
                <input type="file" name="movieImg" id="movieImg" required>
                <label for="directorId">Director</label>
                <select name="directorId" required>
                    <option value="">Select a director</option>
                    <% directors.forEach(director => { %>
                    <option value="<%= director._id %>"><%= director.name %></option>
                    <% }) %>
                </select>

                <label for="year">Year</label>
                <input type="number" name="year" id="year" required>
            </div>
            <button type="submit">Add movie</button>
        </form>
    </main>
</body>

</html>
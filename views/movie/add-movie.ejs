<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/form-movie.css">

</head>
<body>
    <%- include('../includes/header.ejs') %>
    

    <main>
        <form class="movie_form" action="/movies/add" method="POST">
            <header>
                <h2>Add movie</h2>
            </header>
            <div class="form_control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" required>

                <!-- <label for="director">Director</label>
                <input type="text" name="director" id="director"> -->
                <label for="directorId">Director</label>
                <select name="directorId" required>
                    <option value="">Select a director</option>
                    <% directors.forEach(director => { %>
                        <option value="<%= director._id %>"><%= director.name %></option>
                    <% }) %>
                </select>

                <label for="year">Year</label>
                <input type="number" name="year" id="year" required>
            </div>
            <button type="submit">Add movie</button>
        </form>
    </main>
</body>
</html>
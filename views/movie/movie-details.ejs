<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/stylesheets/movie-details.css">

</head>
<body>
    <%- include('../includes/header.ejs') %>
    <main>
        <div class="movie_detailed">
            <div><h1><%= movie.title %> </h1></div>
            <img src="https://i.pinimg.com/564x/e8/11/b2/e811b2175e459dec1af04097a791849d.jpg" alt="<%= movie.title %>">
            <div>Director: <%= movie.directorName %></div>
            <div>Year: <%= movie.year %> </div>
            <% if (isLoggedIn) { %>
            <div class="buttons">
                <form action="/add-to-watched/" method="post">
                    <input type="hidden" name="movieId" value="<%=movie._id%>">
                    <button type="submit">Add to watched</button>
                </form>
                <form action="/add-to-wish/" method="post">
                    <input type="hidden" name="movieId" value="<%=movie._id%>">
                    <button type="submit">Add to wish</button>
                </form>
            </div>
            <% } %>
        </div>
    </main>
</body>
</html>